<h1><%= @task.title %> <%= render 'checkbox', task: @task%></h1>
<p><%= @task.details %></p>

<div>
  <%= link_to 'Edit task', edit_task_path %>
  <%= link_to "Delete",
        task_path(@task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <%= link_to 'Back to list', tasks_path %>
</div>
